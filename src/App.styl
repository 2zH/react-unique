@import 'styles/base'

.App {
  text-align: center;
}

.App-logo {
  animation: App-logo-spin infinite 20s linear;
  height: 80px;
}

.App-header {
  background-color: #222;
  height: 150px;
  padding: 20px;
  color: white;
}

.App-intro {
  font-size: large;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

main 
  width: 100%;
  overflow: hidden;
  display: flex;
  flex: 1;


aside 
    max-width: 280px;
    width: 100%;
    transition: all .5s;
    > div
      transition: all .5s;
      
section 
  width: 100%
  padding: 20px

a
  text-decoration: none

